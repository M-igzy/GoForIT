<%= form_with(model: [journal, task], class: 'task-form') do |form| %>

  <% if task.errors.any? %>

    <ul class="error-message">
        <% task.errors.each do |error| %>
            <li><%= error.full_message %></li>
        <% end %>
    </ul>

   
  <% end %>


    <%= form.text_field :name, placeholder: "✏️ Task Name", class: 'input is-normal task-input', autocomplete: :off %>

    <br/><br/>

    <%= form.rich_text_area :description, placeholder: "📃 Task Description", class: 'textarea is-normal task-desc-ta', autocomplete: :off, maxlength: 2500 %>

    <br/>


    <%= form.label :deadline do%>
        <span>Set Deadline:</span>
    <% end %>
    <%= form.date_field :deadline %>

    <br/>

    <%= form.label :completed do%>
      <span>Set Status:</span>
    <% end %>
    <%= form.select :completed, Task::COMPLETED_OPTIONS, class: "select" %>

    <br/>

    <div class="is-flex is-align-items-center task-buttons ">
      <%= form.button class: "button start-now-two" do %> 
        <%= raw '<i class="fas fa-plus mr-3"></i>' if action_name.capitalize == 'Create' %>
        <%= raw '<i class="fas fa-plus mr-3"></i>' if action_name.capitalize == 'New' %>
        <%= raw '<i class="fas fa-edit mr-3"></i>' if action_name.capitalize == 'Update' %>
        <%= raw '<i class="fas fa-edit mr-3"></i>' if action_name.capitalize == 'Edit' %>
        <%= :new if action_name.capitalize == "New" %><%= :edit if action_name.capitalize == "Edit" %> <%= :task %>
      <% end %>

      <%= link_to journal do%>
        Cancel
      <% end %>
    </div>

<% end %>
