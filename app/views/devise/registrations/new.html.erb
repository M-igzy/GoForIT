<%= javascript_pack_tag 'alert' %>

<%= render 'nav' %>

<section id="new-journal" class="new-journal login">

  <div class="container"> 

    <div class="login-form signup-form">


      <%= form_for(resource, as: resource_name, url: users_sign_up_path) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.text_field :username, placeholder: 'ğŸ‘¤ Username', class: 'input is-medium login-input', autofocus: true %>
        </div>

        <div class="field">
          <%= f.email_field :email, placeholder: 'ğŸ‘¤ Email', autofocus: true, class: 'input is-medium login-input', autocomplete: "email" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, placeholder: 'ğŸ”’ Password', class: 'input is-medium login-input', autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, placeholder: 'ğŸ”’ Confirm Password', class: 'input is-medium login-input', autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>

  </div>

</section>
